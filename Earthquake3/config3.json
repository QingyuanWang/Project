{
    "name": "Earthquake",
    "n_gpu": 1,

    "arch": {
        "type": "RCF",
        "args": {}
    },
    "data_loader": {

        "type": "EarthquakeDataLoader",
        "args":{
            "seismic_path": "/Users/shanyuhai/PycharmProjects/Earthquake/data/FYP_data/seis_sub_350IL_500t_1200XL.npy",
            "label_path": "/Users/shanyuhai/PycharmProjects/Earthquake/data/FYP_data/fault_sub_350IL_500t_1200XL.npy",
            "batch_size": 64,
            "train_number_of_pictures": 10,
            "val_number_of_pictures": 5,
            "train_start": 0,
            "val_start": 20
        }
    },
    "optimizer": {

        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 0.0002,
            "momentum":0.9
        }
    },
    "loss":"cross_entropy_loss_RCF",
    "metrics": [
        "IoU"
    ],
    "lr_scheduler2": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode":"min",
            "factor":0.1,
            "patience":5,
            "verbose":"True"
        }
    },
    "trainer": {
        "epochs": 4,
        "modelNo":3,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }


}

